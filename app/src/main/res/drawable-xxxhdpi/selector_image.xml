<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 클릭 경우 -->
    <item android:state_pressed="true">
        <!-- image대신 직접 selector를 그리겠음 -->
        <shape >
            <!-- 도형 내부 색 채우기 -->
            <solid android:color="@color/colorAccent"/>
            <!-- 테두리 선 굵기 / 테두리 선 색 -->
            <stroke android:width="2dp" android:color="#000000"/>
            <!-- 모서리의 라운드 (값이 클수록 라운드의 각 증가) -->
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
        </shape>
    </item>
    <!-- 클릭X 경우 -->
    <item android:state_pressed="false">
        <shape >
            <gradient android:angle="90" android:endColor="#e8a6ec" android:startColor="#a1a8f7"/>
            <stroke android:width="2dp" android:color="#ffffff"/>
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
        </shape>
    </item>
</selector>